{
    "swagger": "2.0",
    "info": {
        "description": "Manage your things with the thang",
        "version": "1.0.0",
        "title": "Managerie API"
    },
    "host": "localhost:1337",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/device": {
            "post": {
                "tags": [
                    "Device"
                ],
                "summary": "Device",
                "description": "The Device endpoint returns a list of listed devices",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "query",
                        "description": "Device UUID.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Natural key for the device.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Device status.",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "Description",
                        "in": "query",
                        "description": "Device description.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of devices",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Device"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Device"
                ],
                "summary": "Device",
                "description": "The Device endpoint returns a list of listed devices",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "query",
                        "description": "Device UUID.",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Natural key for the device.",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Device status.",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "Description",
                        "in": "query",
                        "description": "Device description.",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of devices",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Device"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/deviceType": {
            "get": {
                "tags": [
                    "Device Types"
                ],
                "summary": "Device Types",
                "description": "Different types of Devices",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Device name.",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "description",
                        "in": "query",
                        "description": "Device type description.",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of device types",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/DeviceType"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "DeviceType": {
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string",
                    "description": "Unique identifier representing a specific product for a given latitude & longitude. For example, uberX in San Francisco will have a different product_id than uberX in Los Angeles."
                },
                "description": {
                    "type": "string",
                    "description": "Description of product."
                },
                "name": {
                    "type": "string",
                    "description": "Display name of product."
                },
                "location": {
                    "type": "string",
                    "description": "Capacity of product. For example, 4 people."
                },
                "metadata": {
                    "type": "string",
                    "description": "Image URL representing the product."
                }
            }
        },
        "Device": {
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string",
                    "description": "Unique identifier representing a specific device"
                },
                "name": {
                    "type": "string",
                    "description": "[ISO 4217](http://en.wikipedia.org/wiki/ISO_4217) currency code."
                },
                "description": {
                    "type": "string",
                    "description": "Display name of product."
                },
                "estimate": {
                    "type": "string",
                    "description": "Formatted string of estimate in local currency of the start location. Estimate could be a range, a single number (flat rate) or \"Metered\" for TAXI."
                },
                "low_estimate": {
                    "type": "number",
                    "description": "Lower bound of the estimated price."
                },
                "high_estimate": {
                    "type": "number",
                    "description": "Upper bound of the estimated price."
                },
                "surge_multiplier": {
                    "type": "number",
                    "description": "Expected surge multiplier. Surge is active if surge_multiplier is greater than 1. Price estimate already factors in the surge multiplier."
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        }
    }
}
